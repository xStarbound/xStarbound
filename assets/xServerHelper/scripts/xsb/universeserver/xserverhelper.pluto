--- Connection/disconnection messages ---

function clientConnected(clientId)
    local nick = universe.clientNick(clientId)
    if getConfig().stripNicks then nick = sb.stripEscapeCodes(nick) end
    local accountName = universe.clientAccount(clientId)
    accountName = accountName and (string.format("(^cyan;%s^reset;) ", accountName)) or ""
    local connectionMessage = string.format("Player '%s' %sconnected", nick, accountName)
    local serverNick = getConfig().serverNick
    serverNick = type(serverNick) == "string" ? serverNick : ""
    local serverPortrait = getConfig().serverPortrait
    serverPortrait = type(serverPortrait) == "string" ? serverPortrait : ""
    for _, cID in ipairs(allPlayersBut(clientId)) do
        universe.sendChat(cID, {
            context = { mode = "Broadcast", channel = "" },
            fromConnection = 0,
            fromNick = serverNick,
            portrait = serverPortrait,
            text = connectionMessage,
            data = jobject({}),
        })
    end

    motdQueue[clientId] = tonumber(getConfig().motdDelay) or 0
end

function clientDisconnected(clientId)
    local nick = universe.clientNick(clientId)
    if getConfig().stripNicks then nick = sb.stripEscapeCodes(nick) end
    local accountName = universe.clientAccount(clientId)
    accountName = accountName and (string.format("(^cyan;%s^reset;) ", accountName)) or ""
    local disconnectionMessage = string.format("Player '%s' %sdisconnected", nick, accountName)
    local serverNick = getConfig().serverNick
    serverNick = type(serverNick) == "string" ? serverNick : ""
    local serverPortrait = getConfig().serverPortrait
    serverPortrait = type(serverPortrait) == "string" ? serverPortrait : ""
    for _, cID in ipairs(allPlayersBut(clientId)) do
        universe.sendChat(cID, {
            context = { mode = "Broadcast", channel = "" },
            fromConnection = 0,
            fromNick = serverNick,
            portrait = serverPortrait,
            text = disconnectionMessage,
            data = jobject({}),
        })
    end
end

--- Command handler ---

function command(name, cid, args)
    if type(commands[name]) == "function" then
        return commands[name](cid, args)
    else
        return "Command ^orange;/" .. name .. "^reset; does not exist."
    end
end

function init()
    if type(root.getConfiguration("xServerHelper")) ~= "table" then
        root.setConfiguration("xServerHelper", jobject{
            stripNicks = false,
            registrationEnabled = false,
            motd = null,
            motdDelay = 0,
            serverNick = "server",
            serverPortrait = null
        })
    end
    if type(root.getConfiguration("serverUsers")) ~= "table" then
        root.setConfiguration("serverUsers", jobject{
            admin = jobject{
                admin = true,
                guest = false,
                password = "<set admin password here>"
            }
        })
    end
    if (checkHostType(1) ~= "ownClient") then
        if root.getConfiguration("allowAdminCommandsFromAnyone") == true or root.getConfiguration("anonymousConnectionsAreAdmin") == true then
            logWarn("Detected potentially insecure xServer settings! The current configuration allows *any* user to use admin commands and prevents xServer's "
                .. "build protection system from having any effect even if enabled. Check to ensure you didn't leave \"allowAdminCommandsFromAnyone\" or " 
                .. "\"anonymousConnectionsAreAdmin\" enabled by mistake!")
        end
        if root.getConfiguration("allowAdminCommands") == false then
            logInfo("Admin commands are completely disabled on this server due to \"allowAdminCommands\" being enabled in the server config.")
        end
        if not adminAccountExists() then
            logInfo("There are no admin accounts set up on this server. Consider setting one up in \"serverAccounts\" for server management.")
        end
        local buildConfig = getBuildConfig()
        if buildConfig.enabled ~= true or buildConfig.accountClaimsEnabled ~= true then
            logInfo("This server is not currently configured to allow use of the /claim command. Ensure that both \"enabled\" and \"accountClaimsEnabled\" "
                .. "in \"buildPermissionSettings\" are set to true in order to use the /claim command.")
        else
            if buildConfig.storeClaimsInServerData == true then
                logInfo("Server configured to use the universe server data file for world claim data.")
            else
                logInfo("Server configured to use the server configuration file for world claim data.")
            end
        end
    else
        logInfo("Running xServer::Helper on xClient.")
    end
end

function update(dt)
    if #table.keys(motdQueue) ~= 0 then
        local motd = getConfig().motd
        if type(motd) == "string" then
            local serverNick = getConfig().serverNick
            serverNick = type(serverNick) == "string" ? serverNick : ""
            local serverPortrait = getConfig().serverPortrait
            serverPortrait = type(serverPortrait) == "string" ? serverPortrait : ""
            for clientId, timer in pairs(motdQueue) do
                if tonumber(timer) then
                    if timer <= 0 then
                        universe.sendChat(clientId, {
                            context = { mode = "Broadcast", channel = "" },
                            fromConnection = 0,
                            fromNick = serverNick,
                            portrait = serverPortrait,
                            text = motd,
                            data = jobject({}),
                        })
                        motdQueue[clientId] = nil
                    else
                        motdQueue[clientId] -= dt
                    end
                end
            end
        end
    end
end